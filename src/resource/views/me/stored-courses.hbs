<div class="mt-4">
  <div class="d-flex justify-content-between align-items-center">
    <a href="/me/trash/course">→ Các khóa học đã xóa ({{deletedCount}})</a>
    <h3 class="text-center mt-3">Danh sách khóa học</h3>
    <a href="/courses/create"><button type="button" class="btn btn-success">Dang khoa hoc</button></a>

  </div>
</div>

<table class="table table-bordered mt-4 text-center">
  <thead>
    <tr class="text-center bg-warning">
      <th scope="col" class="text-white">#</th>
      <th scope="col" class="text-white">Name</th>
      <th scope="col" class="text-white">Favourite</th>
      <th scope="col" class="text-white">Created</th>
      <th scope="col" class="text-white">Action</th>
    </tr>
  </thead>

  <tbody>
    {{#each courses}}
    <tr class="text-center">
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.name}}</td>
      <td>{{this.favourite}}</td>
      <td>{{this.createdAt}}</td>
      <td>
        <div class="d-flex justify-content-between">
          <a href="/courses/{{this._id}}/edit" class="btn btn-link p-0" title="Chỉnh sửa">
            <i class="fas fa-pen"></i>
          </a>

          <a href="" class="btn btn-link p-0" data-toggle="modal" data-id="{{this._id}}"
            data-target="#delete-course-modal" title="Xóa">
            <i class="fas fa-trash text-danger"></i>
          </a>
        </div>
      </td>
    </tr>
    {{else}}
    <tr>
      <td colspan="5" class="text-center">
        Bạn chưa đăng ký khóa học nào!!!
        <a href="/courses/create">Tạo khóa học mới</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<!-- Modal xác nhận xóa -->
<div id="delete-course-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn xóa khóa học này không?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger">Xóa</button>
        <button id="btn-delete-course" type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

<!-- Form ẩn để gửi yêu cầu xóa -->
<form name="delete-course-form" method="POST">
</form>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var courseId;
    var btnDeleteCourse = document.querySelector('.btn-danger');
    var deleteForm = document.forms['delete-course-form'];

    $('#delete-course-modal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      courseId = button.data('id');
    });

    btnDeleteCourse.onclick = function () {
      deleteForm.action = '/courses/' + courseId + '?_method=DELETE';
      deleteForm.submit();
    };
  });
</script>