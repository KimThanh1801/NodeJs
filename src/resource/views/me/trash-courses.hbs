<div class="mt-4">
  <div class="d-flex justify-content-between align-items-center">
    <a href="/me/stored/courses">← Danh sách khóa học</a>
    <h3 class="text-center flex-grow-1 m-0">Khóa học đã xóa</h3>
  </div>


  <table class="table table-bordered mt-4 text-center">
    <thead>
      <tr class="text-center bg-warning">
        <th scope="col" class="text-white">#</th>
        <th scope="col" class="text-white">Name</th>
        <th scope="col" class="text-white">Favourite</th>
        <th scope="col" class="text-white">Created Deleted</th>
        <th scope="col" class="text-white">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.favourite}}</td>
        <td>{{this.deletedAt}}</td>
        <td>
          <div class="d-flex justify-content-around">
            <a href="/courses/{{this._id}}/restore" class="btn btn-link btn-restore p-0" data-id="{{this._id}}"
              title="Khôi phục">
              <i class="fas fa-undo text-success"></i>
            </a>
            <a href="#" class="btn btn-link p-0" data-toggle="modal" data-id="{{this._id}}"
              data-target="#delete-course-modal" title="Xóa vĩnh viễn">
              <i class="fas fa-trash-alt text-danger"></i>
            </a>
          </div>
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="5" class="text-center">
          Thùng rác trống!!! <a href="/me/stored/courses">Quay lại danh sách khóa học</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Modal xác nhận xóa -->
<div id="delete-course-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học vĩnh viễn?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn xóa vĩnh viễn khóa học này không?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger">Xóa</button>
        <button id="btn-delete-course" type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

<!-- Hidden forms -->
<form name="delete-course-form" method="POST"></form>
<form name="restore-course-form" method="POST"></form>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var courseId;
    var btnDeleteCourse = document.querySelector('.btn-danger');
    var deleteForm = document.forms['delete-course-form'];
    var restoreButtons = $('.btn-restore');
    var restoreForm = document.forms['restore-course-form'];

    $('#delete-course-modal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      courseId = button.data('id');
    });

    btnDeleteCourse.onclick = function () {
      deleteForm.action = '/courses/' + courseId + '/force?_method=DELETE';
      deleteForm.submit();
    };

    restoreButtons.click(function (e) {
      e.preventDefault();
      var courseId = $(this).data('id');
      restoreForm.action = '/courses/' + courseId + '/restore?_method=PATCH';
      restoreForm.submit();
    });
  });
</script>